module Data.List.Elem where

-------------------------------------------------------------------------------
-- Imports
-------------------------------------------------------------------------------

open import Prelude

-------------------------------------------------------------------------------
-- Variables
-------------------------------------------------------------------------------

private
  variable
    a a1 a2 : Set
    as : List Set

-------------------------------------------------------------------------------
-- Elem
-------------------------------------------------------------------------------

record Elem (a : Set) (as : List Set) : Set where
  field elemPos : Nat

open Elem {{...}} public

instance
  Elem0 : Elem a (a :: as)
  Elem0 .elemPos = 0

  Elem1 : Elem a (a1 :: a :: as)
  Elem1 .elemPos = 1

  Elem2 : Elem a (a1 :: a2 :: a :: as)
  Elem2 .elemPos = 2