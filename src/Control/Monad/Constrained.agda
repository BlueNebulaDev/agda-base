module Control.Monad.Constrained where

-------------------------------------------------------------------------------
-- Imports
-------------------------------------------------------------------------------

open import Prelude

-------------------------------------------------------------------------------
-- Variables
-------------------------------------------------------------------------------

private
  variable
    c f m : Set -> Set
    a b : Set

-------------------------------------------------------------------------------
-- CFunctor
-------------------------------------------------------------------------------

record CFunctor (c f : Set -> Set) : Set where
  field cfmap : {{c b}} -> (a -> b) -> f a -> f b

open CFunctor {{...}} public

-------------------------------------------------------------------------------
-- CManad
-------------------------------------------------------------------------------

record CMonad (c m : Set -> Set) : Set where
  field
    overlap {{super}} : CFunctor c m
    cmbind : {{c b}} -> m a -> (a -> m b) -> m b
    cmreturn : a -> m a

open CMonad {{...}} public

-------------------------------------------------------------------------------
-- Unconstrained
-------------------------------------------------------------------------------

Unconstrained : Set -> Set
Unconstrained _ = Unit