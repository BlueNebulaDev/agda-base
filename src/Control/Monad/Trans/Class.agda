{-# OPTIONS --type-in-type #-}

module Control.Monad.Trans.Class where

-------------------------------------------------------------------------------
-- Imports
-------------------------------------------------------------------------------

open import Prelude

-------------------------------------------------------------------------------
-- Variables
-------------------------------------------------------------------------------

private
  variable
    a : Set
    m : Set -> Set

-------------------------------------------------------------------------------
-- MonadTrans
-------------------------------------------------------------------------------

record MonadTrans (t : (Set -> Set) -> Set -> Set) : Set where
  field
    overlap {{monadTrans}} : {{_ : Monad m}} -> Monad (t m)
    lift : {{_ : Monad m}} -> m a -> t m a

open MonadTrans {{...}} public
